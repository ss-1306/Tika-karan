<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />


    <android.support.v7.widget.CardView
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_weight="1"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="-3dp"
        android:clickable="true"
        app:cardBackgroundColor="#29B6F6"

        android:id="@+id/myvaccination">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="My Vaccination Schedule"
                android:textStyle="bold"
                android:typeface="serif"
                android:textColor="#ffffff"
                android:id="@+id/createTreatment"
                android:layout_above="@+id/creTreaNext"
                android:layout_toRightOf="@+id/creaTreatIcon" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/rightarrow"
                android:id="@+id/creTreaNext"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/create_1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:id="@+id/creaTreatIcon"
                android:layout_alignBottom="@+id/creTreaNext"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="View vaccination progress, edit active schedules"
                android:textColor="#eeeeee"
                android:layout_below="@+id/createTreatment"
                android:layout_toLeftOf="@+id/creTreaNext"
                android:layout_toRightOf="@+id/creaTreatIcon"
                android:id="@+id/createTreatment_desc" />

        </RelativeLayout>
        
    </android.support.v7.widget.CardView>

    
    <android.support.v7.widget.CardView
        android:layout_height="150dp"
        android:layout_marginTop="-8dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="-3dp"


        app:cardBackgroundColor="#03A9F4"

        android:id="@+id/baby_profile"><RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="View Baby Profile"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/CurrTreatment"
            android:layout_above="@+id/currTreatNext"
            android:layout_toRightOf="@+id/currTreatIcon"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/rightarrow"
            android:id="@+id/currTreatNext"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/current2"
            android:id="@+id/currTreatIcon"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="View complete baby profile"
            android:textColor="#eeeeee"
            android:layout_toRightOf="@+id/currTreatIcon"
            android:layout_toLeftOf="@+id/currTreatNext"
            android:layout_below="@+id/CurrTreatment"
            android:id="@+id/CurrTreatment_desc" />

    </RelativeLayout></android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_height="150dp"
        android:layout_marginTop="-8dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="-3dp"

        app:cardBackgroundColor="#0091EA"
        android:id="@+id/add_baby_builder">
        
        <RelativeLayout
            android:layout_width="match_parent" 
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Add Baby"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/PastTreat"
                android:layout_above="@+id/pastTreatNext"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/PasTreatIcon" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/rightarrow"
                android:id="@+id/pastTreatNext"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/history1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:id="@+id/PasTreatIcon"
                android:layout_alignBottom="@+id/pastTreatNext"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Add a Baby Profile"
                android:textColor="#eeeeee"
                android:layout_below="@+id/PastTreat"
                android:layout_alignLeft="@+id/PastTreat"
                android:layout_alignStart="@+id/PastTreat"
                android:layout_toLeftOf="@+id/pastTreatNext"
                android:layout_toStartOf="@+id/pastTreatNext"
                android:id="@+id/PastTreat_desc" />
        
    </RelativeLayout></android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_height="150dp"
        android:layout_marginTop="-8dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="-3dp"

        app:cardBackgroundColor="#1976D2"

        android:id="@+id/search_clinic"><RelativeLayout
        android:layout_width="fill_parent"

        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Locate a Clinic"
            android:typeface="serif"
            android:textStyle="bold"
            android:id="@+id/LocPharmacy"
            android:textColor="#ffffff"
            android:layout_above="@+id/LocPharmNext"
            android:layout_toLeftOf="@+id/LocPharmNext"
            android:layout_toRightOf="@+id/LocPharmIcon" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/rightarrow"
            android:id="@+id/LocPharmNext"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pin1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/LocPharmIcon"
            android:layout_alignBottom="@+id/LocPharmNext"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Search for clinic by pincode"
            android:textColor="#eeeeee"
            android:layout_below="@+id/LocPharmacy"
            android:layout_alignLeft="@+id/LocPharmacy"
            android:layout_alignStart="@+id/LocPharmacy"
            android:textSize="16sp"
            android:id="@+id/LocPharmacy_desc" />
    </RelativeLayout></android.support.v7.widget.CardView>


</LinearLayout>